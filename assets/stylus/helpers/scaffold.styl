@import "variables.styl"

*
  box-sizing border-box
  margin 0
  padding 0

html
body
  width 100%
  height 100%
  overflow-x hidden

*::before
*::after
  box-sizing border-box;

body
  font-family $base-font
  font-weight $base-font-weight
  font-size $base-font-size
  line-height $base-line-height
  color: $primary-text-color
  background-color $body-background

button
input
optgroup
select
textarea
  margin 0
  font-family inherit
  font-size 100%
