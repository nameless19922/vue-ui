@import './colors.styl'

// base font
$base-font = 'Geometria', sans-serif
$base-font-size = 15px
$base-line-height = 1.6
$base-font-weight = 400

// body background
$body-background = $color-white

// primary text color
$primary-text-color = $color-granite-gray

// input border
$input-border-color = $color-liberty
$input-border-color--invalid = $color-coral-reef
$input-border-with = 1px

// adaptive
$screen-xxs = 420px
$screen-xs = 768px
$screen-sm = 1024px
$screen-md = 1280px
$screen-lg = 1366px
$screen-xl = 1600px

// other
$transition-time = .3s